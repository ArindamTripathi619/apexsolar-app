{
  "name": "apexsolar-app",
  "version": "1.0.0",
  "description": "A comprehensive employee management platform with secure authentication, file uploads, and role-based access control",
  "main": "app/page.tsx",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArindamTripathi619/apexsolar-app.git"
  },
  "keywords": [
    "employee-management",
    "nextjs",
    "typescript",
    "prisma",
    "authentication",
    "google-cloud",
    "file-upload",
    "dashboard"
  ],
  "author": "ArindamTripathi619",
  "license": "MIT",
  "homepage": "https://github.com/ArindamTripathi619/apexsolar-app#readme",
  "bugs": {
    "url": "https://github.com/ArindamTripathi619/apexsolar-app/issues"
  },
  "private": false,
  "overrides": {
    "@testing-library/react": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "setup": "npm run db:push && npm run db:seed"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.17.1",
    "@hookform/resolvers": "^5.2.0",
    "@prisma/client": "^6.12.0",
